<fluent:RibbonWindow x:Class="Wideor.App.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fluent="urn:fluent-ribbon"
        xmlns:player="clr-namespace:Wideor.App.Features.Player"
        xmlns:timeline="clr-namespace:Wideor.App.Features.Timeline"
        xmlns:editor="clr-namespace:Wideor.App.Features.Editor"
        xmlns:local="clr-namespace:Wideor.App.Shell"
        mc:Ignorable="d"
        Title="Wideor" 
        Height="800" 
        Width="1400"
        WindowState="Maximized"
        Background="#1A1A1A">
    <!-- DataContextはShellWindow.xaml.csでViewModelプロパティ変更時に設定される -->

    <Grid>
        <Grid.RowDefinitions>
            <!-- リボン -->
            <RowDefinition Height="Auto" />
            <!-- メインコンテンツ -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- リボンUI -->
        <local:ShellRibbon x:Name="ShellRibbonControl"
                          Grid.Row="0"
                          ViewModel="{Binding}" />

        <!-- メインコンテンツエリア -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <!-- C0: Timeline Area (TimeRuler 60px + FilmStrip 可変) -->
                <ColumnDefinition Width="700" MinWidth="400" />
                <!-- C1: GridSplitter (フィルムエリアとリンクエリアの境界) -->
                <ColumnDefinition Width="5" />
                <!-- C2: Link Area -->
                <ColumnDefinition Width="80" MinWidth="60" />
                <!-- C3: Text Area (残り全て) -->
                <ColumnDefinition Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!-- C0: TimelinePage (TimeRuler + FilmStrip) -->
            <timeline:TimelinePage Grid.Column="0"
                                  ViewModel="{Binding TimelineViewModel}"
                                  BorderBrush="#444444"
                                  BorderThickness="0,0,0,0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  ClipToBounds="True" />

            <!-- C1: GridSplitter (フィルムエリアとリンクエリアの境界) -->
            <GridSplitter Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Background="#444444"
                         ResizeDirection="Columns"
                         ShowsPreview="False"
                         Cursor="SizeWE" />

            <!-- C2: Link Area (プレースホルダー - 将来実装) -->
            <Border Grid.Column="2"
                    Background="#2A2A2A"
                    BorderBrush="#444444"
                    BorderThickness="0,0,1,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <TextBlock Text="Link Area"
                          Foreground="#666666"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          TextAlignment="Center" />
            </Border>

            <!-- C3: EditorView -->
            <editor:EditorView Grid.Column="3"
                              ViewModel="{Binding EditorViewModel}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch" />

            <!-- PlayerView (ZIndex最前面、プレビューモード/シアターモード用) -->
            <player:PlayerView Grid.Column="0"
                              Grid.ColumnSpan="4"
                              ViewModel="{Binding PlayerViewModel}"
                              Panel.ZIndex="100"
                              Visibility="Collapsed"
                              x:Name="PlayerViewOverlay" />
        </Grid>
    </Grid>
</fluent:RibbonWindow>
