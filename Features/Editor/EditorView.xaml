<UserControl x:Class="Wideor.App.Features.Editor.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Wideor.App.Features.Editor"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.DataContext>
        <Binding RelativeSource="{RelativeSource Self}" Path="ViewModel" />
    </UserControl.DataContext>

  <Grid Background="{DynamicResource ContentBackgroundBrush}">
        <!-- AvalonEdit（ライトモード: 白背景・黒文字、ダークモード: 暗い背景・明るい文字） -->
        <avalon:TextEditor x:Name="TextEditorControl"
                          FontFamily="Meiryo UI"
                          FontSize="14"
                          ShowLineNumbers="True"
                          Background="{DynamicResource ContentBackgroundBrush}"
                          Foreground="{DynamicResource PrimaryTextBrush}"
                          LineNumbersForeground="{DynamicResource TertiaryTextBrush}" />
    </Grid>
</UserControl>
