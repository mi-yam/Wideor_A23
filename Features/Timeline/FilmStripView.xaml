<UserControl x:Class="Wideor.App.Features.Timeline.FilmStripView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Wideor.App.Features.Timeline"
             xmlns:domain="clr-namespace:Wideor.App.Shared.Domain"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Resources>
        <local:TimeSpanConverter x:Key="TimeSpanConverter" />
        <local:TimeToYConverter x:Key="TimeToYConverter" />
        <local:DurationToHeightConverter x:Key="DurationToHeightConverter" />
    </UserControl.Resources>

    <!-- 通常スクロール型のコンテナ -->
    <Grid x:Name="FilmStripContainer"
          Background="#1A1A1A"
          ClipToBounds="True"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- ScrollViewerで通常のスクロール -->
        <ScrollViewer x:Name="FilmStripScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1A1A1A"
                      ScrollChanged="FilmStripScrollViewer_ScrollChanged">
            <ItemsControl x:Name="FilmStripItemsControl" 
                          ItemsSource="{Binding VideoSegments}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Background="#1A1A1A">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- StackPanelで縦に並べる -->
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:VideoSegmentView Segment="{Binding}" 
                                              HorizontalAlignment="Stretch"
                                              Margin="0,0,0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- クリップインジケーター（表示中のクリップ範囲） -->
        <Border Background="#80000000"
                CornerRadius="4"
                Padding="8,4"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="8">
            <TextBlock x:Name="ClipIndexIndicator"
                      Text="1-1 / 1"
                      Foreground="White"
                      FontSize="11" />
        </Border>
    </Grid>
</UserControl>
