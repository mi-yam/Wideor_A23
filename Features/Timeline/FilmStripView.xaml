<UserControl x:Class="Wideor.App.Features.Timeline.FilmStripView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Wideor.App.Features.Timeline"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Binding RelativeSource="{RelativeSource Self}" Path="ViewModel" />
    </UserControl.DataContext>

    <ScrollViewer x:Name="FilmStripScrollViewer"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#1A1A1A">
        <ItemsControl ItemsSource="{Binding ViewModel.ThumbnailItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ThumbnailItem}">
                    <Border Background="#2A2A2A"
                            BorderBrush="#444444"
                            BorderThickness="0,0,0,1"
                            Padding="4"
                            Height="{Binding ViewModel.ThumbnailHeight.Value, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- サムネイル画像 -->
                            <Image Grid.Column="0"
                                   Source="{Binding Thumbnail}"
                                   Width="{Binding ViewModel.ThumbnailWidth.Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Height="{Binding ViewModel.ThumbnailHeight.Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Stretch="Uniform"
                                   Margin="0,0,8,0" />

                            <!-- 時間情報 -->
                            <StackPanel Grid.Column="1"
                                       VerticalAlignment="Center">
                                <TextBlock Text="{Binding TimePosition, Converter={StaticResource TimeSpanConverter}}"
                                          Foreground="White"
                                          FontSize="12"
                                          FontWeight="Bold" />
                                <TextBlock Text="{Binding YPosition, StringFormat='Y: {0:F1}px'}"
                                          Foreground="#888888"
                                          FontSize="10"
                                          Margin="0,2,0,0" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>

    <UserControl.Resources>
        <local:TimeSpanConverter x:Key="TimeSpanConverter" />
    </UserControl.Resources>
</UserControl>
