<UserControl x:Class="Wideor.App.Features.Timeline.VideoSegmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:domain="clr-namespace:Wideor.App.Shared.Domain"
             xmlns:local="clr-namespace:Wideor.App.Features.Timeline"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="320">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:DurationToHeightConverter x:Key="DurationToHeightConverter" />
        <local:BooleanToPlayPauseConverter x:Key="BooleanToPlayPauseConverter" />
        <local:TimeSpanConverter x:Key="TimeSpanConverter" />
        
        <!-- ã‚³ãƒ³ãƒ‘ã‚¯ãƒˆãƒœã‚¿ãƒ³ã®ã‚¹ã‚¿ã‚¤ãƒ« -->
        <Style x:Key="CompactButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ã‚³ãƒ³ãƒ‘ã‚¯ãƒˆã‚¹ãƒ©ã‚¤ãƒ€ãƒ¼ã®ã‚¹ã‚¿ã‚¤ãƒ« -->
        <Style x:Key="CompactSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#FF4444" Height="3" CornerRadius="1.5" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#555555" Height="3" CornerRadius="1.5" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="10" Height="10" Fill="#FF4444" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ä¸­å¤®å†ç”Ÿãƒœã‚¿ãƒ³ã®ã‚¹ã‚¿ã‚¤ãƒ« -->
        <Style x:Key="CenterPlayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80000000" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="40">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A0000000" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0000000" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border x:Name="MainBorder"
            Background="#1A1A1A"
            BorderBrush="#333333"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            MinWidth="320"
            MinHeight="150"
            ClipToBounds="True">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- ãƒ•ã‚¡ã‚¤ãƒ«åãƒ˜ãƒƒãƒ€ãƒ¼ -->
            <Border Grid.Row="0" Background="#252525" Padding="6,3">
                <TextBlock x:Name="FileNameText"
                          Text="å‹•ç”»ãƒ•ã‚¡ã‚¤ãƒ«"
                          Foreground="#AAAAAA"
                          FontSize="11"
                          TextTrimming="CharacterEllipsis"
                          ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" />
            </Border>
            
            <!-- å‹•ç”»è¡¨ç¤ºã‚¨ãƒªã‚¢ -->
            <Grid Grid.Row="1" Background="#000000" ClipToBounds="True">
                <!-- ã‚µãƒ ãƒã‚¤ãƒ«/ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ï¼ˆå†ç”Ÿã—ã¦ã„ãªã„æ™‚ã«è¡¨ç¤ºï¼‰ -->
                <Border x:Name="ThumbnailPlaceholder"
                       Background="#1A1A1A"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">
                    <Grid>
                        <!-- ã‚µãƒ ãƒã‚¤ãƒ«ç”»åƒ -->
                        <Image x:Name="ThumbnailImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                        
                        <!-- ã‚µãƒ ãƒã‚¤ãƒ«ãŒãªã„å ´åˆã®ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ -->
                        <StackPanel x:Name="NoThumbnailPanel"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock Text="ðŸŽ¬"
                                      FontSize="40"
                                      Foreground="#444444"
                                      HorizontalAlignment="Center" />
                            <TextBlock x:Name="PlaceholderDurationText"
                                      Text="00:00"
                                      FontSize="12"
                                      Foreground="#666666"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0" />
                        </StackPanel>
                        
                        <!-- æ™‚é–“è¡¨ç¤ºï¼ˆã‚µãƒ ãƒã‚¤ãƒ«ä¸Šã«ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ï¼‰ -->
                        <Border Background="#80000000"
                                CornerRadius="3"
                                Padding="4,2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="4">
                            <TextBlock x:Name="ThumbnailDurationText"
                                      Text="00:00"
                                      FontSize="11"
                                      Foreground="White" />
                        </Border>
                    </Grid>
                </Border>
                
                <!-- VideoViewï¼ˆLibVLCSharpï¼‰- å†ç”Ÿä¸­ã®ã¿è¡¨ç¤º -->
                <vlc:VideoView x:Name="VideoPlayer"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ClipToBounds="True"
                              Visibility="Collapsed" />
                
                <!-- ä¸­å¤®ã®å†ç”Ÿãƒœã‚¿ãƒ³ï¼ˆã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ï¼‰ -->
                <Button x:Name="CenterPlayButton"
                        Style="{StaticResource CenterPlayButtonStyle}"
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="OnPlayPauseClicked">
                    <TextBlock x:Name="CenterPlayIcon"
                              Text="â–¶"
                              FontSize="20"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                </Button>
                
                <!-- éžè¡¨ç¤ºæ™‚ã®ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ -->
                <Border Background="#80000000">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Segment.State, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Hidden">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Segment.Visible, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="éžè¡¨ç¤º"
                              Foreground="Gray"
                              FontSize="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                </Border>
            </Grid>
            
            <!-- ã‚³ãƒ³ãƒ‘ã‚¯ãƒˆã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«ãƒãƒ¼ï¼ˆ1è¡Œãƒ¬ã‚¤ã‚¢ã‚¦ãƒˆï¼‰ -->
            <Border Grid.Row="2"
                    Background="#E0181818"
                    Padding="6,4">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- å†ç”Ÿ/ä¸€æ™‚åœæ­¢ãƒœã‚¿ãƒ³ -->
                    <Button x:Name="PlayPauseButton"
                            Grid.Column="0"
                            Style="{StaticResource CompactButtonStyle}"
                            Click="OnPlayPauseClicked">
                        <TextBlock x:Name="PlayPauseIcon"
                                  Text="â–¶"
                                  FontSize="14"
                                  Foreground="White" />
                    </Button>
                    
                    <!-- åœæ­¢ãƒœã‚¿ãƒ³ -->
                    <Button x:Name="StopButton"
                            Grid.Column="1"
                            Style="{StaticResource CompactButtonStyle}"
                            Click="OnStopClicked">
                        <TextBlock Text="â– "
                                  FontSize="11"
                                  Foreground="White" />
                    </Button>
                    
                    <!-- ãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼ + æ™‚é–“è¡¨ç¤º -->
                    <Grid Grid.Column="2" Margin="8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Slider x:Name="ProgressSlider"
                                Grid.Column="0"
                                Style="{StaticResource CompactSliderStyle}"
                                Minimum="0"
                                Maximum="100"
                                Value="0"
                                Height="16"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                ValueChanged="OnProgressSliderValueChanged"
                                PreviewMouseLeftButtonDown="OnProgressSliderMouseDown"
                                PreviewMouseLeftButtonUp="OnProgressSliderMouseUp" />
                        
                        <!-- æ™‚é–“è¡¨ç¤º -->
                        <TextBlock Grid.Column="1"
                                  VerticalAlignment="Center"
                                  FontSize="11"
                                  Foreground="#AAAAAA">
                            <Run x:Name="CurrentTimeText" Text="00:00" Foreground="White" />
                            <Run Text="/" Foreground="#666666" />
                            <Run x:Name="TotalTimeText" Text="00:00" />
                        </TextBlock>
                    </Grid>
                    
                    <!-- éŸ³é‡ã‚¢ã‚¤ã‚³ãƒ³ -->
                    <TextBlock Grid.Column="3"
                              Text="ðŸ”Š"
                              FontSize="12"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,2,0" />
                    
                    <!-- éŸ³é‡ã‚¹ãƒ©ã‚¤ãƒ€ãƒ¼ -->
                    <Slider x:Name="VolumeSlider"
                           Grid.Column="4"
                           Width="50"
                           Minimum="0"
                           Maximum="100"
                           Value="50"
                           VerticalAlignment="Center"
                           ValueChanged="OnVolumeSliderValueChanged" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
