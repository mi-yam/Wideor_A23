<UserControl x:Class="Wideor.App.Features.Timeline.TimelinePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Wideor.App.Features.Timeline"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#1A1A1A"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          ClipToBounds="True">
        <!-- タイムラインコンテンツ（C1: TimeRuler, C2: FilmStrip, C3: LinkArea, C4: GridSplitter） -->
        <Grid Focusable="True"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <!-- C1: Time Ruler Area (60px固定) -->
                <ColumnDefinition Width="60" MinWidth="60" MaxWidth="60" />
                <!-- C2: Film Area (可変、最小260px - 動画の最小サイズに合わせる) -->
                <ColumnDefinition Width="*" MinWidth="260" />
            </Grid.ColumnDefinitions>
            
            <!-- 背景を設定して余白を黒くする -->
            <Border Grid.Column="1"
                    Background="#1A1A1A"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

            <!-- C1: TimeRulerView（左側） -->
            <local:TimeRulerView x:Name="TimeRulerView"
                                Grid.Column="0"
                                ViewModel="{Binding ViewModel, RelativeSource={RelativeSource AncestorType=local:TimelinePage}}"
                                BorderBrush="#444444"
                                BorderThickness="0,0,1,0" />

            <!-- C2: FilmStripView（中央） -->
            <local:FilmStripView x:Name="FilmStripView"
                                Grid.Column="1"
                                ViewModel="{Binding ViewModel, RelativeSource={RelativeSource AncestorType=local:TimelinePage}}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />

            <!-- Playhead（赤いインジケータ） -->
            <Border Grid.Column="1"
                    Background="Red"
                    Width="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Panel.ZIndex="10"
                    IsHitTestVisible="False" />
        </Grid>
    </Grid>
</UserControl>
