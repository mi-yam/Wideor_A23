<Application x:Class="Wideor_A23.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wideor_A23"
             xmlns:fluent="urn:fluent-ribbon">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Fluent.Ribbonのテーマ -->
                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- グローバルカラーリソース（デフォルト: ライトモード） -->
            <!-- 背景色 -->
            <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F8F8F8"/>
            <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#E8E8E8"/>
            
            <!-- テキスト色 -->
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#555555"/>
            <SolidColorBrush x:Key="TertiaryTextBrush" Color="#888888"/>
            <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#AAAAAA"/>
            
            <!-- 境界線色 -->
            <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>
            <SolidColorBrush x:Key="LightBorderBrush" Color="#E0E0E0"/>
            
            <!-- アクセント色 -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#005A9E"/>
            
            <!-- 注意: ダークモードへの切り替えは ShellViewModel.ApplyTheme() で動的に行われます -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
